apiVersion: v1
kind: Secret
metadata:
  name: api-secrets
type: Opaque
data:
  # MindX OAuth Client Secret (base64 encoded)
  # Application Insights Connection String (base64 encoded)
  # To create: echo -n "your-secret-here" | base64
  MINDX_CLIENT_SECRET: <base64-encoded-secret-here>
  APPLICATIONINSIGHTS_CONNECTION_STRING: <base64-encoded-secret-here>

